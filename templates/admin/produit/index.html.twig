                <th>PeriodeFin</th>
                <th>Actif</th>
                <th>Periodicite</th>
                <th>actions</th>
            </tr>
        </thead>

        <tbody>

        {% for produit in produits %}

            <tr>

                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.unite }}</td>
                <td>{{ produit.quantiteMin }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.nbcheque }}</td>
                <td>{{ produit.nombreDeDistribution }}</td>
                <td>{{ produit.nombreDeLivraisonsRestantes }}</td>
                <td>{{ produit.periodeDebut }}</td>
                <td>{{ produit.periodeFin }}</td>
                <td>{{ produit.actif ? 'Yes' : 'No' }}</td>
                <td>{{ produit.periodicite }}</td>
                
                <td>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier/Supprimer</a>
                </td>

            </tr>
            
        {% else %}
            <tr>
