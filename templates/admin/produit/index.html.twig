    <table class="table table-striped table-dark table-fixed">

        <thead class="thead-light" >
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Unite</th>
                <th>QuantiteMin</th>
                <th>Prix</th>
                <th>Nbcheque</th>
                <th>NombreDeDistribution</th>
                <th>NombreDeLivraisonsRestantes</th>
